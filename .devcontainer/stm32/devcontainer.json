{
	"name": "CybICS-stm32",
	"dockerComposeFile": "./docker-compose.yml",
	"service": "dev",
	"workspaceFolder": "/CybICS/software/stm32",
	"shutdownAction": "stopCompose",
	"initializeCommand": "./.devcontainer/prepare-env.sh",
	"postCreateCommand": "bash /CybICS/.devcontainer/stm32/init-zephyr.sh",
	"overrideCommand": false,
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes",
				"ms-python.python",
				"mcu-debug.debug-tracker-vscode",
				"mcu-debug.rtos-views",
				"mcu-debug.peripheral-viewer",
				"bmd.stm32-for-vscode",
				"timonwong.shellcheck",
				"trond-snekvik.kconfig-lang",
				"trond-snekvik.devicetree"
			],
			"settings": {
				"C_Cpp.default.compilerPath": "/opt/zephyr-sdk/arm-zephyr-eabi/bin/arm-zephyr-eabi-gcc",
				"C_Cpp.default.compileCommands": "${workspaceFolder}/build/compile_commands.json"
			}
		}
	}
}
