{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build STM",
			"type": "shell",
			"command": "west build -b nucleo_g070rb",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Prepare debug",
			"dependsOn": "Build STM",
			"type": "shell",
			"command": "${workspaceRoot}/.vscode/remote.sh",
			"options": {
				"cwd": "${workspaceRoot}"
			}
		},
		{
			"label": "Build Clean STM",
			"type": "shell",
			"command": "west build -b nucleo_g070rb --pristine",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Flash STM",
			"type": "shell",
			"command": "west flash",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}
